<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OIDCAuthentication.Views.LoginPage"
             xmlns:viewmodel="clr-namespace:OIDCAuthentication.ViewModels.Auth"
             x:DataType="viewmodel:LoginViewModel"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Margin="20">
            <Image Source="dotnet_bot.png" HeightRequest="80"/>

            <VerticalStackLayout Margin="0,50">
                <Label FontSize="32"
                       HorizontalTextAlignment="Center"
                       Text="OIDC authentication Demo"/>
            </VerticalStackLayout>

            <Label Margin="10,20,10,20" 
                HorizontalOptions="Center" TextColor="{StaticResource Primary}" 
                       FontSize="20" Text="Login to authentication through IDAM"/>

            <Button Margin="100,20,100,20" 
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="{StaticResource Secondary}"
                    Text="Enter" TextColor="{StaticResource Primary}"/>
            <ActivityIndicator IsRunning="{Binding IsBusy}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>